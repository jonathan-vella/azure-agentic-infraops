
digraph SimpleWorkflow {
    graph [
        bgcolor="#1a1a2e"
        fontcolor="white"
        fontname="Segoe UI, Arial, sans-serif"
        pad="0.4"
        splines="ortho"
        nodesep="0.35"
        ranksep="0.4"
        rankdir="LR"
        dpi="150"
    ]
    
    node [
        fontname="Segoe UI, Arial, sans-serif"
        fontsize="10"
        fontcolor="white"
        style="filled,rounded"
        shape="box"
        penwidth="0"
        margin="0.12,0.08"
    ]
    
    edge [
        color="#64748b"
        penwidth="2"
        arrowsize="0.6"
    ]
    
    // Main 7-step workflow
    s1 [label="1. Plan" fillcolor="#0078D4"]
    s2 [label="2. Architect" fillcolor="#FF6B35"]
    s3 [label="3. Design\nArtifacts" fillcolor="#8b5cf6" style="filled,rounded,dashed"]
    s4 [label="4. Plan Infra" fillcolor="#10b981"]
    s5 [label="5. Generate" fillcolor="#ec4899"]
    s6 [label="6. Deploy" fillcolor="#f4722b"]
    s7 [label="7. As-Built\nArtifacts" fillcolor="#f4722b" style="filled,rounded,dashed"]
    
    // Flow
    s1 -> s2 -> s3 [style="dashed"]
    s2 -> s4
    s3 -> s4 [style="dashed"]
    s4 -> s5 -> s6 -> s7 [style="dashed"]
}
