              }
            },
            "tags": {
              "type": "object",
              "metadata": {
                "description": "Resource tags"
              }
            }
          },
          "variables": {
            "sqlServerName": "[format('sql-{0}-{1}-{2}', take(replace(parameters('projectName'), '-', ''), 10), parameters('environment'), take(parameters('uniqueSuffix'), 6))]"
          },
          "resources": [
            {
              "type": "Microsoft.Sql/servers",
              "apiVersion": "2023-08-01-preview",
              "name": "[variables('sqlServerName')]",
              "location": "[parameters('location')]",
              "tags": "[parameters('tags')]",
              "properties": {
                "version": "12.0",
                "minimalTlsVersion": "1.2",
                "publicNetworkAccess": "Enabled",
                "administrators": {
                  "administratorType": "ActiveDirectory",
                  "principalType": "User",
                  "login": "[parameters('sqlAdminName')]",
                  "sid": "[parameters('sqlAdminObjectId')]",
                  "tenantId": "[tenant().tenantId]",
                  "azureADOnlyAuthentication": true
                }
              }
            },
            {
              "type": "Microsoft.Sql/servers/firewallRules",
              "apiVersion": "2023-08-01-preview",
              "name": "[format('{0}/{1}', variables('sqlServerName'), 'AllowAzureServices')]",
              "properties": {
                "startIpAddress": "0.0.0.0",
                "endIpAddress": "0.0.0.0"
              },
              "dependsOn": [
                "[resourceId('Microsoft.Sql/servers', variables('sqlServerName'))]"
              ]
            }
          ],
          "outputs": {
            "sqlServerName": {
              "type": "string",
              "metadata": {
                "description": "SQL Server name"
              },
              "value": "[variables('sqlServerName')]"
            },
            "sqlServerFqdn": {
              "type": "string",
              "metadata": {
                "description": "SQL Server fully qualified domain name"
